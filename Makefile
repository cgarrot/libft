NAME = libft.a
CC = gcc
FLAGS = -Wall -Wextra -Werror
INC = libft.h

#----------------------------------SOURCE--------------------------------------#

SRC = *.c

#----------------------------------OBJECT--------------------------------------#

OBJ = *.o

#------------------------------------------------------------------------------#

all: $(NAME)

$(NAME):
	@$(CC) $(FLAGS) -c $(SRC) -I $(INC)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)

clean:
	@rm -f $(OBJ)

fclean: clean
	@rm -f $(NAME) 

re: fclean all
